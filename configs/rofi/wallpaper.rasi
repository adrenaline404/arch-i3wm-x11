configuration {
    show-icons: true;
    font: "JetBrainsMono Nerd Font Bold 11";
}

@import "~/.config/i3/themes/current/rofi.rasi"

window {
    width: 850px;
    height: 600px;
    border: 3px;
    border-color: @primary;
    border-radius: 15px;
    background-color: @background;
    padding: 10px;
    location: center;
    anchor: center;
}

mainbox {
    background-color: transparent;
    children: [ inputbar, listview ];
    padding: 10px;
    spacing: 15px;
}

inputbar {
    background-color: @bg-alt;
    border-radius: 10px;
    padding: 12px;
    children: [ prompt, entry ];
    margin: 0 0 10px 0;
}

prompt {
    background-color: transparent;
    text-color: @primary;
    font: "JetBrainsMono Nerd Font Bold 13";
    margin: 0 10px 0 0;
}

entry {
    background-color: transparent;
    text-color: @foreground;
    placeholder: "Search / Select Wallpaper...";
}

listview {
    background-color: transparent;
    columns: 4;
    lines: 3;
    spacing: 15px;
    cycle: true;
    dynamic: true;
    scrollbar: false;
}

element {
    background-color: @bg-alt;
    text-color: @foreground;
    orientation: vertical;
    border-radius: 12px;
    padding: 15px;
    border: 2px;
    border-color: transparent;
}

element selected {
    background-color: @background;
    text-color: @primary;
    border-color: @primary;
}

element-icon {
    size: 120px;
    horizontal-align: 0.5;
    background-color: transparent;
    margin: 0 0 10px 0;
    border-radius: 8px;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    horizontal-align: 0.5;
    vertical-align: 0.5;
}