set $mod Mod4
set $term kitty
set $scripts ~/.config/i3/scripts

font pango:JetBrainsMono Nerd Font 10

# GAPS & LAYOUT
gaps inner 10
gaps outer 0
# GAP TOP: 50px (Polybar Height 28pt + Offset + Padding)
gaps top 50 

default_border pixel 2
default_floating_border pixel 2

# AUTOSTART
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id xss-lock --transfer-sleep-lock -- $scripts/lock.sh
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec_always --no-startup-id picom -b
exec --no-startup-id nitrogen --restore
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Essentials
bindsym $mod+Return exec $term
bindsym $mod+b exec firefox
bindsym $mod+c exec code     # VS Code
bindsym $mod+e exec thunar   # File Manager
bindsym $mod+q kill

# Menus (GUI)
bindsym $mod+d exec $scripts/rofi_launcher.sh
bindsym $mod+Shift+e exec $scripts/rofi_powermenu.sh
bindsym $mod+Shift+w exec $scripts/rofi_network.sh
bindsym $mod+t exec $scripts/theme_switcher.sh gui

# Screenshots (Flameshot)
# Print Screen -> GUI Selection
bindsym Print exec flameshot gui
# Mod+Shift+S -> GUI Selection (Optional)
bindsym $mod+Shift+s exec flameshot gui

# Lock Screen
bindsym $mod+Shift+x exec $scripts/lock.sh

# Window Focus (Vim Style - HJKL)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Window Move (Vim Style)
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Layouts & Toggles
bindsym $mod+Shift+Space floating toggle
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+v layout toggle split

# Hardware Controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86MonBrightnessUp exec brightnessctl s +5%
bindsym XF86MonBrightnessDown exec brightnessctl s 5%-
bindsym XF86AudioPlay exec playerctl play-pause

# System State
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# FLOATING RULES
for_window [class="Pavucontrol"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Nitrogen"] floating enable
for_window [class="Blueman-manager"] floating enable
for_window [class="nm-connection-editor"] floating enable
for_window [class="flameshot"] floating enable, fullscreen disable